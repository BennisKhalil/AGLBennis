pipeline {
    agent any
    tools{
      maven 'maven'
      jdk 'jdk'
    }
    stages {
        stage('build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('test'){
            steps {
                bat 'mvn test'
            }
        }
        stage('coverage'){
          steps {
                bat 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }
        stage('generating'){
            steps {
                bat 'mvn site'
            }
        }
        
    }
    post {
        always {
            junit 'target/surefire-reports/**/*.xml'
            cobertura coberturaReportFile: "target/cobertura/**/*.xml"
        }
    }
}
